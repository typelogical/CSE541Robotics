<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wifi Interface"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forward"
        android:id="@+id/forwardButton"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/header"
        android:layout_alignLeft="@+id/backwardButton"
        android:layout_alignStart="@+id/forwardButton"
        android:onClick="forward"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/rightButton"
        android:layout_below="@+id/forwardButton"
        android:layout_toRightOf="@+id/forwardButton"
        android:layout_toEndOf="@+id/forwardButton"
        android:onClick="right"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/leftButton"
        android:layout_above="@+id/backwardButton"
        android:layout_toLeftOf="@+id/backwardButton"
        android:layout_toStartOf="@+id/backwardButton"
        android:onClick="left"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="backward"
        android:id="@+id/backwardButton"
        android:layout_below="@+id/rightButton"
        android:layout_centerHorizontal="true"
        android:onClick="backward"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connectButton"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/backwardButton"
        android:layout_toStartOf="@+id/backwardButton"
        android:onClick="connect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/disconnectButton"
        android:layout_alignTop="@+id/connectButton"
        android:layout_toRightOf="@+id/backwardButton"
        android:layout_toEndOf="@+id/backwardButton"
        android:onClick="disconnect"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/disconnectButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_alignTop="@+id/rightButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
